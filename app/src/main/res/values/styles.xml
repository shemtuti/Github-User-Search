<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/imprima</item>
        <item name="fontFamily">@font/imprima</item>

    </style>

    <style name="labelFollow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_follow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/p_5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryDarkColor</item>

    </style>

    <style name="divider">
        <item name="background">@color/primaryLightColor</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">2dp</item>

    </style>

</resources>